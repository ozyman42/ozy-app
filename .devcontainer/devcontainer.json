{
    "build": {
        "context": ".",
        "dockerfile": "./Dockerfile"
    },
    "runArgs": ["--device=/dev/net/tun"],
    "features": {
        "desktop-lite": {
            "password": "vscode",
            "webPort": "6080",
            "vncPort": "5901"
        },
        "ghcr.io/tailscale/codespace": {}
    },
    "customizations": {
        "vscode": {
            "settings": {
                "workbench.colorTheme": "Default Dark Modern"
            }
        }
    },
    "forwardPorts": [6080],
    "postStartCommand": "tailscale up --accept-routes"
}